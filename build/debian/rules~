#!/usr/bin/make -f
#
# $Id$

include VERSION

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

configure: stage.configure

build: stage.build

stage.configure:
	dh_testdir
	cd compile; ./configure.sh
	touch stage.configure

stage.build: stage.configure 
	dh_testdir
	cd compile; ${MAKE}
	touch stage.build

clean: stage.configure
	dh_testdir
	dh_testroot
	cd compile; ${MAKE} clean
	rm -f stage.*
	dh_clean

distclean: clean
	cd compile; ${MAKE} distclean
	rm -rf debian

install: stage.build
	dh_testdir
	dh_testroot
	dh_prep
	cd compile; \
		${MAKE} PKGBUILDDIR=${CURDIR}/debian/${name} PREFIX=usr install

binary: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

.PHONY: build clean binary install configure
